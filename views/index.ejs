        </button>
    </div>

    <!-- Best Seller Section -->
    <section class="container my-5">
        <div class="row g-4 justify-content-center">
            <% bestSeller.forEach((book)=> { %>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card shadow-lg border-0 rounded-4 overflow-hidden bg-light position-relative">
                        <!-- Bestseller Badge -->
                        <span
                            class="badge bg-success position-absolute top-0 end-0 m-2 p-2 px-4 rounded-pill">Bestseller</span>

                        <!-- Image with Hover Effect -->
                        <div class="overflow-hidden">
                            <img src="<%= book.imageUrl %>" class="card-img-top" alt="<%= book.bookName %>">
                        </div>

                        <div class="card-body text-start p-4">
                            <h5 class="card-title text-dark fw-bold">
                                <%= book.bookName %>
                            </h5>
                            <p class="text-muted mb-2">by <strong>
                                    <%= book.author %>
                                </strong></p>
                            <p class="fs-5 text-success fw-semibold">Price: $<%= book.price %>
                            </p>

                            <!-- Full Description on Hover -->
                            <p class="card-text text-muted text-truncate description">
                                <%= book.description %>
                            </p>

